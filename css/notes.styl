.notes-container
  display: flex
  margin: 0 auto
  width: 100%
  flex-direction: column
  justify-content: center
  align-items: center

  @media screen and (max-width: 930px)
    width: 98%
    margin: 0 auto 50px

  @media screen and (max-width: 400px)
    margin: 15px auto 50px

  .note-hint
    border: solid 3px $dark-gray
    border-radius: 8px
    text-align: center
    max-width: 694px
    width: 100%
    margin: 1em auto
    padding: 10px 0
    color: #5c5c5c
    font-size: 16px
    line-height: 24px
    box-sizing: border-box

  .note
    width: 100%
    max-width: 700px
    color: #2b2b2b
    font-size: 16px
    font-weight: 400
    line-height: 50px
    text-align: left
    background-color: #f8f8f8
    border-radius: 8px
    border-spacing: 5px 5px
    padding-left: 10px

    @media screen and (max-width: 400px)
      font-size: 12px

    .note-animal
      font-weight: 700

  .delete
    font-size: 14px
    font-weight: 700
    margin: 2px 10px 0 0
    float: right
    background-color: transparent
    color: rgba(43, 43, 43, .54)
    line-height: 43px