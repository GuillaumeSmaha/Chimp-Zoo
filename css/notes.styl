.notes-container
  display: flex
  margin: 0 auto
  width: 100%
  flex-direction: column
  justify-content: center
  align-items: center

  .note-hint
    border: solid 3px $dark-gray
    border-radius: 8px
    text-align: center
    max-width: 694px
    width: 100%
    margin: 1em auto
    padding: 10px 0
    color: #5c5c5c
    font-size: 16px
    line-height: 24px


  .note
    width: 100%
    max-width: 700px
    color: #2b2b2b
    font-size: 16px
    font-weight: 400
    line-height: 50px
    text-align: left
    background-color: #f8f8f8
    border-radius: 8px
    border-spacing: 5px 5px

    &:before
      content: ''
      background-color: $dark-gray
      width: 60px
      height: 50px
      display: inline-block
      float: left
      border-bottom-left-radius: 8px
      border-top-left-radius: 8px

    &.chimpanzee:before
      background-color: $green

    span
      &:first-of-type
        margin-left: 10px

  .delete
    font-size: 14px
    font-weight: 700
    margin: 2px 10px 0 0
    float: right
    background-color: transparent
    color: rgba(43, 43, 43, .54)
    line-height: 43px