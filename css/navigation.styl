.site-navigation
  background-color: $green
  width: 100%
  height: 70px
  padding-top: 30px

  .logo
    vertical-align: middle
    margin-left: 20px

  li
    display: inline-block
    width: 90px
    height: 35px
    text-align: center
    margin: 17px 0

    &:first-of-type
      margin-left: 35px

    a
      color: #505050
      font-size: 16px
      font-weight: 400
      line-height: 35px
      text-decoration: none
      &:visited
        color: inherit

    &.active
      color: white
      border: solid 2px $topbar-green
      border-radius: 6px

