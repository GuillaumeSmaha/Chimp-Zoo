.site-navigation
  background-color: $green
  width: 100%
  height: 70px
  padding-top: 30px

  .logo
    vertical-align: middle
    margin-left: 20px

  a:not(:first-of-type)
    display: inline-block
    width: 90px
    color: $light-gray
    font-size: 16px
    font-weight: 400
    line-height: 35px
    text-decoration: none
    text-align: center
    margin: 17px 0

    &:nth-child(2)
      margin-left: 35px

    &:visited
      color: $light-gray

    &.active
      color: white
      border: solid 2px $topbar-green
      border-radius: 6px