.site-navigation
  background-color: $green
  width: 100%
  height: 70px

  .zooniverse-info
    font: bold 13px "Helvetica Neue", Arial, Helvetica, sans-serif
    display: inline-block
    margin: 5px
    vertical-align: middle
    color: $mint
    position: absolute
    z-index: 2
    top: 0
    left: 0

    .zooniverse-logo
      width: 25px
      height: 25px
      margin: -2px 9px 0 0
      vertical-align: middle

  .mobile-menu
    vertical-align: middle

    .hamburger
      width: 15px
      margin-left: 20px
      display: none

      @media screen and (max-width: 660px)
        display: inline-block

  .logo-link
    line-height: 70px

    .logo
      vertical-align: middle
      margin: 0 20px

  .menu-list
    transition: .3s ease all
    transform: translateY(0)
    background-color: $green
    display: inline

    a
      display: inline-block
      width: 90px
      color: $light-gray
      font-size: 16px
      font-weight: 400
      line-height: 35px
      text-decoration: none
      text-align: center
      margin: 17px 0

      &:visited
        color: $light-gray

      &.active
        color: white
        border: solid 2px $topbar-green
        border-radius: 6px

  @media screen and (max-width: 660px)
    .menu-list
      position: relative
      top: -347px
      padding: 10px 0
      display: block

      a
        display: none

      &.show-menu
        transform: translateY(347px)
        z-index: 10

        a
          display: block
          margin: 17px auto
