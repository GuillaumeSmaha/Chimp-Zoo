.site-navigation
  background-color: $green
  width: 100%
  height: 70px

  .zooniverse-info
    font: bold 13px "Helvetica Neue", Arial, Helvetica, sans-serif
    display: inline-block
    margin: 5px
    vertical-align: middle
    color: $mint
    position: absolute
    z-index: 2
    top: 0
    left: 0

    .zooniverse-logo
      width: 25px
      height: 25px
      margin: -2px 9px 0 0
      vertical-align: middle

  .logo
    vertical-align: middle
    margin-left: 20px

  a:not(:first-of-type)
    display: inline-block
    width: 90px
    color: $light-gray
    font-size: 16px
    font-weight: 400
    line-height: 35px
    text-decoration: none
    text-align: center
    margin: 17px 0

    &:nth-child(2)
      margin-left: 35px

    &:visited
      color: $light-gray

    &.active
      color: white
      border: solid 2px $topbar-green
      border-radius: 6px