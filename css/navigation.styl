.site-navigation
  background-color: $topbar-green
  width: 100%
  height: 70px

  @media screen and (max-width: 710px)
    text-align: center

  .mobile-menu
    width: 15px
    display: none
    vertical-align: middle
    cursor: pointer

    @media screen and (max-width: 710px)
      display: inline-block
      position: absolute
      z-index: 10
      top: 4.5px
      right: 4.5px
      padding: 20px

    .bars
      fill: #424242

  .logo-link
    line-height: 70px
    position: relative
    z-index: 10

    .logo
      vertical-align: middle
      margin: 0 20px
      outline: none
      width: 161px

      @media screen and (max-width: 710px)
        margin: 0

  .menu-list
    transition: .3s ease all
    transform: translateY(0)
    background-color: transparent
    display: inline
    will-change: transform

    a
      display: inline-block
      width: 90px
      color: $light-gray
      font-size: 16px
      font-weight: 400
      line-height: 35px
      text-decoration: none
      text-align: center
      margin: 15.5px 0

      &:visited
        color: $light-gray

      &.active
        color: white
        border: solid 2px $green
        border-radius: 6px

  @media screen and (max-width: 710px)
    .menu-list
      position: relative
      top: -347px
      padding: 10px 0
      display: block
      will-change: transform

      a
        display: none

      &.show-menu
        transition: .3s ease all
        transform: translateY(347px)
        z-index: 20

        a
          display: block
          margin: 17px auto
          position: relative
          z-index: 20

  .green-background
    background-color: $topbar-green