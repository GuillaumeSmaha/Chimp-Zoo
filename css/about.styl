.about
  .about-hero
    background: url(./assets/about-hero.jpg) no-repeat center center
    background-size: cover
    width: 100%
    height: 414px

    h2
      margin: 0
      font-size: 60px
      font-weight: 700
      line-height 60px
      text-align: left
      color: white
      padding: 143px 249px

      @media screen and (max-width: 1200px)
        padding: 143px 200px

      @media screen and (max-width: 1000px)
        padding: 143px 100px

      @media screen and (max-width: 800px)
        padding: 143px 50px

      @media screen and (max-width: 500px)
        font-size: 35px
        line-height: 35px
        padding: 170.5px 30px 170.5px 50px

      .amp
        font-size: 120px
        transform: rotate(-23deg)
        display: inline-block
        vertical-align: middle

        @media screen and (max-width: 500px)
          font-size: 70px

  .about-nav
    background-color: $near-black
    height: 59px

    a
      text-decoration: none
      line-height: 59px
      padding: 19px
      color: white

      &:first-of-type
        margin-left: 0

      &.active
        background-color: $green

      &.about-link
        background-color: $near-black

      &:visited(:not(.active))
        color: inherit


  .page-one, .page-two, .page-three
    .about-section
      width: 100%
      background-color: $dark-gray
      height: 500px

      @media screen and (max-width: 768px)
        height: 100%

      .content
        display: flex
        height: 100%
        align-items: center

        @media screen and (max-width: 768px)
          flex-direction: column

        div
          padding: 0 110px 0 20px
          max-width: 738px

          @media screen and (max-width: 768px)
            padding: 20px

          h2
            color: $green
            font-weight: 400

          p
            color: #eae9e9
            margin: 0
          a
            display: none

        img
          width: 100%
          max-width: 225px
          height: 100%
          max-height: 225px
          border-radius: 50%
          box-sizing: border-box
          margin: 20px

          @media screen and (max-width: 768px)
            margin: 20px 20px 5px

      &:nth-child(odd)
        background-color: $blackish

  .page-one
    .about-section
      .content
        div
          order: 1

          @media screen and (max-width: 768px)
            order: 2

        img
          order: 2

          @media screen and (max-width: 768px)
            order: 1

      &:nth-child(odd)
        .content
          div
            order: 2
            padding: 0 20px 0 110px

            @media screen and (max-width: 768px)
              padding: 20px

          img
            order: 1


      &:last-of-type
        background: $green url(./assets/about-background.jpg) no-repeat center center
        background-size: cover
        height: 333px

        .content
          height: 333px
          text-align: center
          flex-direction: column
          justify-content: center

          div
            padding: 0 20px

            h2
              margin: 75px 0
              color: #eae9e9

              @media screen and (max-width: 768px)
                margin: 0 0 20px

            p
              display: none

            a
              display: inline-block
              padding: 22px 74px
              text-decoration: none
              color: #eae9e9
              background-color: #1b865c
              border-radius: 6px

          img
            order: 3
            width: 66px
            height: 112px
            border: none
            position: absolute
            bottom: 311px
            margin: 0
            padding: 0
            transition: all 0.5s ease

            @media screen and (min-width: 769px)
              align-self: flex-end
              right: 15%

            @media screen and (max-width: 768px)
              position: relative
              bottom: -136px
              align-self: center

            @media screen and (max-width: 573px)
              bottom: -119px

            @media screen and (max-width: 399px)
              bottom: -103px

            &:hover
              bottom: 330px

              @media screen and (max-width: 768px)
                bottom: -110px

              @media screen and (max-width: 573px)
                bottom: -95px

              @media screen and (max-width: 399px)
                bottom: -80px

  .page-two, .page-three
    @media screen and (max-width: 768px)
      h2, h3
        text-align: center

  .page-two
    h2
      margin: 0 0 5px
    h3
      color: #bbbaba
      font-size: 14px
      font-weight: 400
      margin-top: 0



