.about
  .about-hero
    background: url(/assets/about-hero.jpg) no-repeat center center
    background-size: cover
    width: 100%
    height: 414px

    h2
      margin: 0
      font-size: 60px
      font-weight: 700
      line-height 60px
      text-align: left
      color: white
      padding: 143px 249px

      .amp
        font-size: 120px
        transform: rotate(-23deg)
        display: inline-block
        vertical-align: middle

  .about-nav
    background-color: $near-black
    height: 59px

    a
      text-decoration: none
      line-height: 59px
      padding: 19px
      color: white

      &:first-of-type
        margin-left: 0

      &.active
        background-color: $green

      &.about-link
        background-color: $near-black

      &:visited(:not(.active))
        color: inherit
        
  .page-one
    .about-section
      width: 100%
      background-color: $dark-gray
      height: 500px

      .content
        display: flex
        height: 500px
        align-items: center

        div
          order: 1
          padding: 0 110px 0 0

          h2
            color: $green

          p
            color: #eae9e9
            margin: 0
          a
            display: none

        img
          width: 100%
          max-width: 222px
          border-radius: 50%
          order: 2
          border: solid 15px $green
          box-sizing: border-box

      &:nth-child(odd)
        background-color: $blackish

        .content
          div
            order: 2
            padding: 0 0 0 110px
          img
            order: 1

      &:first-of-type
        .content img
          border: none

      &:last-of-type
        background: $green url(/assets/about-background.jpg) no-repeat center center
        background-size: cover 
        height: 333px

        .content
          height: 333px
          text-align: center
          flex-direction: column
          justify-content: center

          div
            padding: 0
            
            h2
              margin: 0 0 75px
              color: #eae9e9

            p
              display: none

            a
              display: initial
              padding: 22px 74px
              text-decoration: none
              color: #eae9e9
              background-color: #1b865c
              border-radius: 8px
              
          img
            order: 3
            width: 66px
            border: none
            position: absolute
            right: 30%
            bottom: 190px
            transition: all 0.5s ease

            &:hover
              bottom: 210px
              
  .page-two, .page-three
    background: #eae9e9
    padding: 20px
    margin: 95px auto !important
    border-radius: 8px
    
    .name
      margin-right: 5px
      font-weight: 700

