.slide-tutorial
  display: none
  width: 100%
  background: rgba(0, 0, 0, 0.7)
  position: absolute
  box-sizing: border-box
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 100

  &.show
    animation: fadeIn .25s forwards

  &.active
    display: block

  &.fade-out
    animation: fadeOut .25s forwards

  .slide-tutorial-slide
    display: none
    &.active
      display: block

  .slide-tutorial-container
    width: 40%
    max-width: 400px
    position: relative
    background: #fff
    margin: 50px auto
    overflow: auto
    z-index: 100
    border-radius: 8px

    @media screen and (max-width: 820px)
      width: 60%

    @media screen and (max-width: 520px)
      width: 90%
      margin: 110px auto

    .slide-tutorial-slide
      .slide-tutorial-slide-top img
        width: 100%
      .slide-tutorial-slide-bottom
        min-height: 210px
        height: 100%

        p, h1
          color: #676767
          line-height: 20px

        h1
          font-size: 24px
          margin: 25px 20px
        p
          font-size: 14px
          margin: 0 20px 25px

    .slide-tutorial-close-button
      position: absolute
      top: 0
      right: 0
      color: #676767
      font-size: 12px

    .slide-tutorial-dots
      text-align: center
      width: 100%
      overflow: auto
      margin: 10px 0

      .slide-tutorial-dot
        width: 10px
        border-radius: 50%
        height: 10px
        display: inline-block
        float: none
        margin: 5px
        background: #cbcbcb
        &.active
          background: $topbar-green

    .slide-tutorial-button-container
      width: 100%
      text-align: center

      .slide-tutorial-next-button
        margin: 10px
        width: 200px
        background-color: $topbar-green
        line-height: 50px
        font-size: 16px

        &:hover
          background-color: rgba(39, 196, 134, 0.7)

  &.chimps
    .slide-tutorial-slide-top
      width: 400px
      height: 275px
      background-color: $topbar-green

      h1
        margin: 0
        padding: 95px 20px 0
        text-align: center

    .slide-tutorial-slide-bottom
      p
        margin-top: 20px !important

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}
