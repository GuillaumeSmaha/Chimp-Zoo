.classify
  padding: 20px 0
  color: white

  .loading-spinner
    height: 415px
    line-height: 415px

  .hidden-chimp-container
    width: 100%
    max-width: 72px
    margin-left: auto
    margin-right: 20px

    .hidden-chimp
      position: relative
      z-index: 0
      bottom: -117px
      transition: all 0.5s ease

      &:hover
        bottom: -90px

  .tutorial-btn
    display: none

  .loading-container
    text-align: center
    margin: 20px auto

  .location-container
    p
      background: $blackish
      margin: 0 auto
      border-radius: 8px
      width: 98%
      max-width: 930px
      box-sizing: border-box
      line-height: 50px

      &:before
        content: ''
        background-color: $light-gray
        width: 60px
        height: 50px
        display: inline-block
        float: left
        border-bottom-left-radius: 8px
        border-top-left-radius: 8px
        margin-right: 20px






