.classify
  max-width: 1200px
  width: 100%
  margin: 0 auto

  .guide
    top: 0
    left: -300px
    width: 300px
    height: 100%
    position: absolute
    background-color: limegreen
    padding: 20px
    box-sizing: border-box

  .annotation
    padding-bottom: 20px

    span
      margin: 10px 0 0 0

    button
      margin: 0 5px 10px 0

    .btn-active
      background-color: green

    .disabled
      cursor: not-allowed

    .subject
      text-align: center

      .preview-imgs
        li
          display: inline

          &:nth-child(3):after
            content: "."
            display: block
            height: 0
            clear: both
            visibility: hidden

          img
            margin: 0 2.5px 2.5px

      .video
        img // placeholder img
          width: 100%

      .hide
        display: none

    .workflowButtons
      text-align: center
      margin: 15px auto

    .ui-buttons
      max-width: 450px
      margin: 0 auto
      padding-top: 10px

      .guide-btn, .favorite-btn
        cursor: pointer

      .guide-btn
        float: left

      .favorite-btn
        float: right

    .step
      text-align: center
      max-width: 350px
      margin: -15px auto
      padding-top: 10px

    .notes-container
      display: table
      margin: 0 auto

      .note-row
        display: table-row

        .note
          display: table-cell

        .delete
          display: table-cell
          margin: 10px