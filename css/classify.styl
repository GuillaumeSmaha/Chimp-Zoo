.classify
  padding: 10px 0
  color: white
  min-height: 600px
  height: 100%

  &.open-guide
    min-height: 1050px

    .hidden-chimp-container
      display: none

  .loading-spinner
    height: 415px
    line-height: 415px

  .hidden-chimp-container
    width: 100%
    max-width: 72px
    margin-left: auto
    margin-right: 20px
    height: 0

    .hidden-chimp
      position: relative
      z-index: 0
      bottom: 20px
      transition: all 0.5s ease

      &:hover
        bottom: 40px

    @media screen and (max-width: 400px)
      margin: 0 auto

  .loading-container
    text-align: center
    margin: 20px auto

  .location-container

    .tutorial-btn, .faq-btn
      float: right
      margin: 0 10px
      line-height: 40px
      padding: 0 5px
      font-size: 11px

      @media screen and (max-width: 400px)
        margin: 0 5px
        float: none

    .skip-checkbox-label
      float: right
      font-size: 11px
      margin: 0 10px

    p
      background: $blackish
      margin: 0 auto
      border-radius: 8px
      width: 98%
      max-width: 930px
      box-sizing: border-box
      line-height: 40px

      @media screen and (max-width: 400px)
        font-size: 14px
        height: 80px

      &:before
        content: ''
        background: $light-gray url(./assets/loc-icon.svg) no-repeat center center
        width: 60px
        height: 40px
        display: inline-block
        float: left
        border-bottom-left-radius: 8px
        border-top-left-radius: 8px
        margin-right: 20px

        @media screen and (max-width: 400px)
          width: 40px
          height: 80px
          margin-right: 10px
