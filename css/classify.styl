.classify
  max-width: 960px
  width: 100%
  margin: 0 auto
  color: white

  .guide
    top: 0
    left: -300px
    width: 300px
    height: 100%
    position: absolute
    background-color: $green
    padding: 20px
    box-sizing: border-box

    .close-guide-btn
      position: absolute
      top: 10px
      right: 10px

  .annotation
    padding-bottom: 20px

    span
      margin: 10px 0 0 0

    p
      text-align: left
      margin: 1em auto

    .btn-active
      background-color: #0d6795

    .subject
      text-align: center

      .preview-imgs
        margin: 0 auto
        background-color: $dark-gray
        border-radius: 12px

        li
          display: inline

          @media screen and (min-width: 960px)
            &:nth-child(3):after
              content: "."
              display: block
              height: 0
              clear: both
              visibility: hidden

          img
            padding: 10px
            border-radius: 16px
            width: 100%
            max-width: 300px

            @media screen and (max-width: 768px)
              max-width: 250px

            @media screen and (max-width: 400px)
              max-width: 175px

      .video
        background-color: $dark-gray
        border-radius: 12px
        max-height: 547px

        img // placeholder img
          width: 100%
          max-width: 940px
          padding: 10px
          border-radius: 16px


      .hide
        display: none

    .workflowButtons
      text-align: center
      margin: 50px auto 15px

    .ui-buttons
      max-width: 600px
      margin: 0 auto
      padding-top: 50px

      .guide-btn, .favorite-btn
        cursor: pointer

      .guide-btn
        float: left

      .favorite-btn
        float: right

    .step
      text-align: center
      max-width: 500px
      margin: -50px auto
      padding-top: 10px

      button
        width: 200px
        height: 50px
        font-size: 16px
        font-weight: 400
        line-height: 24px

    .notes-container
      display: table
      margin: 0 auto

      .note-row
        display: table-row

        .note
          display: table-cell

        .delete
          display: table-cell
          margin: 10px