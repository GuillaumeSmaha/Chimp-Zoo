.classify
  padding: 20px 0
  color: white

  .loading-spinner
    height: 415px
    line-height: 415px

  .hidden-chimp-container
    width: 100%
    max-width: 72px
    margin-left: auto
    margin-right: 20px
    height: 0

    .hidden-chimp
      position: relative
      z-index: 0
      bottom: 10px
      transition: all 0.5s ease

      &:hover
        bottom: 30px

  .tutorial-btn, .faq-btn
    float: right
    margin: 0 10px
    line-height: 50px
    padding: 0 5px

    @media screen and (max-width: 400px)
      margin: 0 5px

  .loading-container
    text-align: center
    margin: 20px auto

  .location-container
    p
      background: $blackish
      margin: 0 auto
      border-radius: 8px
      width: 98%
      max-width: 930px
      box-sizing: border-box
      line-height: 50px

      &:before
        content: ''
        background-color: $light-gray
        width: 60px
        height: 50px
        display: inline-block
        float: left
        border-bottom-left-radius: 8px
        border-top-left-radius: 8px
        margin-right: 20px

        @media screen and (max-width: 400px)
          width: 40px
          margin-right: 10px





