  .details
    padding: 20px
    height: 100%

    .feature-image
      width: 100%
      border-radius: 8px

    .back-guide-btn
      text-decoration: none
      font-size: 14px
      background-color: transparent
      color: #3b413b
      border-radius: 0
      margin: 0
      padding: 0
      vertical-align: middle
      position: absolute
      top: 123px
      left: 20px

      .back-icon
        margin: 0 5px

    .animal-name
      font-size: 18px
      line-height: 24px
      font-weight: 500
      margin: 0
      text-align: center
      letter-spacing: 3px
      text-transform: uppercase

    .animal-taxonomy
      font-family: DroidSerif, serif
      font-size: 15px
      // font-style: italic
      font-weight: 400
      line-height: 24px
      margin: 0 0 1em 0
      text-align: center

    .images-header
      text-align: center
      font-weight: 400

    p
      color: #3b413b
      font-family: DroidSerif, serif

    figure
      margin: 1em 0

      figcaption
        text-align: left
        font-size: 12px

      img
        border-radius: 8px
        width: 100%

    div h4
      text-align: center
      font-weight: 400
