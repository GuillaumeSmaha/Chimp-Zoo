.guide
  top: 0
  left: -400px
  width: 100%
  max-width: 400px
  height: 100vh
  position: absolute
  background-color: #e4f3e4
  box-sizing: border-box
  color: #3b413b
  overflow: auto
  -ms-overflow-style: none
  -webkit-overflow-scrolling: touch
  
  @media screen and (max-width: 768px)
    height: 100%

  .guide-header
    background: url(./assets/guide/guide-background.jpg)
    position: relative
    display: block
    width: 100%
    max-width: 400px
    height: 100px
    text-align: center

    &:after
      content: ""
      background: black
      opacity: 0.8
      width: 100%
      max-width: 400px
      height: 100px
      top: 0
      left: 0
      position: absolute
      z-index: 0

    h2
      font-size: 18px
      font-weight: 500
      line-height: 100px
      margin: 0
      color: white
      letter-spacing: 3px
      text-transform: uppercase
      position: relative
      z-index: 1
      opacity: 1

    .close-guide-btn
      position: absolute
      top: 5px
      right: 5px
      background-color: transparent
      z-index: 10
      font-size: 12px
      -webkit-font-smoothing: initial

  .animal-list
    z-index: 1
    position: absolute
    top: 100px
    width: 100%
    max-width: 400px

    .nav-header
      width: 100%
      max-width: 400px
      height: 80px
      background-color: $dark-gray
      background-image: none
      color: white
      line-height: 80px
      text-align: center

    .animal-list-item
      height: 80px
      color: #424a42
      list-style: none
      text-align: left
      line-height: 80px
      font-size: 18px
      cursor: pointer
      background-color: #e4f3e4
      text-transform: capitalize
      display: flex

      &:nth-child(odd)
        background-color: #cce8cc

      .tooltip
        display: inline-block
        background-image: url(./assets/chimps-tooltip-sprite.jpg)
        width: 75px
        height: 75px
        border-radius: 50%
        margin: 2.5px 30px

        &#animal-0
          background-position: 0px 0px

        &#animal-1
          background-position: 0px -75px

        &#animal-2
          background-position: 0px -150px

        &#animal-3
          background-position: 0px -225px

        &#animal-4
          background-position: 0px -300px

        &#animal-5
          background-position: 0px -375px

        &#animal-6
          background-position: 0px -450px

        &#animal-7
          background-position: 0px -525px

        &#animal-8
