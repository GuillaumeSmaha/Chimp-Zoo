.guide
  top: 0
  left: -400px
  width: 100%
  max-width: 400px
  height: 100vh
  position: absolute
  background-color: #e4f3e4
  box-sizing: border-box
  color: #3b413b
  overflow: auto
  -ms-overflow-style: none
  -webkit-overflow-scrolling: touch

  .guide-header
    background: url(./assets/guide/guide-background.jpg)
    position: relative
    display: block
    width: 100%
    max-width: 400px
    height: 100px
    text-align: center

    &:after
      content: ""
      background: black
      opacity: 0.8
      width: 100%
      max-width: 400px
      height: 100px
      top: 0
      left: 0
      position: absolute
      z-index: 0

    h2
      font-size: 18px
      font-weight: 500
      line-height: 100px
      margin: 0
      color: white
      letter-spacing: 3px
      text-transform: uppercase
      position: relative
      z-index: 1
      opacity: 1

    .close-guide-btn
      position: absolute
      top: 5px
      right: 5px
      background-color: transparent
      z-index: 10
      font-size: 12px
      -webkit-font-smoothing: initial

  .animal-list
    z-index: 1
    position: absolute
    top: 100px
    width: 100%
    max-width: 400px

    .nav-header
      width: 100%
      max-width: 400px
      height: 80px
      background-color: $dark-gray
      background-image: none
      color: white
      line-height: 80px
      text-align: center

    .animal-list-item
      height: 80px
      color: #424a42
      list-style: none
      text-align: center
      line-height: 80px
      font-size: 18px
      cursor: pointer
      background-color: #e4f3e4
      text-transform: capitalize

      &:nth-child(odd)
        background-color: #cce8cc

  .details
    padding: 20px
    height: 100%

    .feature-image
      width: 100%
      border-radius: 8px

    .back-guide-btn
      text-decoration: none
      font-size: 14px
      background-color: transparent
      color: #3b413b
      border-radius: 0
      margin: 0
      padding: 0
      vertical-align: middle
      position: absolute
      top: 123px
      left: 20px

      .back-icon
        margin: 0 5px

    .animal-name
      font-size: 18px
      line-height: 24px
      font-weight: 500
      margin: 0
      text-align: center
      letter-spacing: 3px
      text-transform: uppercase

    .animal-taxonomy
      font-family: DroidSerif, serif
      font-size: 15px
      font-style: italic
      font-weight: 400
      line-height: 24px
      margin: 0 0 1em 0
      text-align: center

    .images-header
      text-align: center
      font-weight: 400

    p
      color: #3b413b
      font-family: DroidSerif, serif

    figure
      margin: 1em 0

      figcaption
        text-align: left
        font-size: 12px

      img
        border-radius: 8px
        width: 100%
