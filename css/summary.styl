.summary-content
  background: $blackish
  width: 100%
  max-width: 930px
  margin: 0 auto
  border-radius: 8px
  display: flex
  flex-wrap: wrap

  @media screen and (max-width: 870px)
    width: 98%
    margin: 0 auto 25px

  .general-summary
    display: inline-flex
    flex-direction: column
    width: 50%
    height: 460px
    justify-content: space-between
    padding-left: 20px
    box-sizing: border-box

    @media screen and (max-width: 870px)
      min-height: 375px
      max-height: 410px
      height: 100%

    @media screen and (max-width: 768px)
      width: 100%
      margin: 0 auto
      display: flex
      padding-left: 0

    @media screen and (max-width: 400px)
      padding-left: 20px

    h3
      font-size: 12px
      color: white
      opacity: .5
      -webkit-font-smoothing: antialiased
      -moz-osx-font-smoothing: grayscale
      font-weight: 400

    p
      font-size: 24px

    ul
      padding: 0
      font-size: 24px
      -webkit-font-smoothing: antialiased
      -moz-osx-font-smoothing: grayscale

      li
        margin-bottom: 15px
        list-style: none

    .summary-location
      flex-grow: 0

    .summary-notes
      flex-grow: 1

    .share
      @media screen and (min-width: 401px)
        min-width: 360px

      @media screen and (max-width: 400px)
        text-align: center

      p
        font-size: 12px
        display: inline-block
        opacity: .5
        margin: 18px 15px 18px 0

        @media screen and (max-width: 900px)
          margin: 18px 5px 18px 0

      .share-btn
        width: 35px
        height: 35px
        border-radius: 50%
        background: #464543
        margin: 5px

      .discuss-btn
        background: #464543
        width: 120px
        height: 40px
        border-radius: 4px
        font-size: 12px
        line-height: 40px
        float: right
        margin: 10px 10px 10px 0

        @media screen and (max-width: 768px)
          margin: 10px
          float: none

  .no-chimp
    @media screen and (min-width: 871px)
      height: 527px

    @media screen and (max-width: 870px)
      height: 460px

  .map-container
    width: 50%
    min-height: 410px
    height: 100%

    @media screen and (min-width: 871px)
      height: 527px

    @media screen and (max-width: 768px)
      width: 100%

    @media screen and (max-width: 400px)
      min-height: initial

    .map
      margin: 0

      img
        width: 100%
        box-sizing: border-box

        @media screen and (min-width: 871px)
          height: 527px

  .chimp-summary
    display: flex
    flex-wrap: wrap
    float: left
    background: $topbar-green
    width: 100%
    border-bottom-left-radius: 8px
    border-bottom-right-radius: 8px
    margin-top: -70px

    @media screen and (max-width: 400px)
      margin-top: -85px

    img
      width: 92px
      height: 90px
      border-bottom-left-radius: 8px

    .chimp-content
      margin: 22px 0 0 0
      flex: 1 0 33%

      h3
        font-size: 16px
        margin: 0

      p
        margin: 0
        line-height: 16px

      @media screen and (max-width: 400px)
        max-width: 270px

    .chimp-btn-container
      margin: 15px 25px
      flex: 1 0 auto

      button
        background-color: $green
        font-size: 12px
        line-height: 40px
        width: 110px
        height: 40px
        border-radius: 4px
        padding: 0

      @media screen and (max-width: 1100px)
        margin: 15px auto

      @media screen and (max-width: 400px)
        margin: 15px 0
        max-width: 300px
        text-align: center
