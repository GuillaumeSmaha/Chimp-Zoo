.summary-content
  background: $blackish
  width: 100%
  max-width: 930px
  margin: 0 auto
  border-radius: 8px
  display: flex
  flex-wrap: wrap

  @media screen and (max-width: 870px)
    width: 98%
    margin: 0 auto 25px

  .general-summary
    display: inline-flex
    flex-direction: column
    width: 50%
    height: 460px
    justify-content: space-between
    padding-left: 20px
    box-sizing: border-box

    @media screen and (max-width: 870px)
      min-height: 375px
      max-height: 410px
      height: 100%

    @media screen and (max-width: 768px)
      width: 100%
      margin: 0 auto
      display: flex

    @media screen and (max-width: 400px)
      padding: 0

    h3
      font-size: 12px
      color: white
      opacity: .5
      font-weight: 400

    p, ul
      font-size: 24px
      margin: 12px 0

    ul
      padding: 0

      li
        margin-bottom: 15px
        list-style: none

    .summary-location
      flex-grow: 0

      @media screen and (max-width: 400px)
        padding-left: 20px

    .summary-notes
      flex-grow: 1
      overflow: auto
      -ms-overflow-style: none
      max-height: 330px
      height: 100%

      @media screen and (max-width: 400px)
        padding-left: 20px

    .share
      @media screen and (min-width: 401px)
        min-width: 360px

      @media screen and (max-width: 400px)
        text-align: center
        padding-left: 5px

      p
        font-size: 12px
        display: inline-block
        opacity: .5
        margin: 18px 15px 18px 0

        @media screen and (max-width: 900px)
          margin: 18px 5px 18px 0

      .share-btn
        width: 35px
        height: 35px
        border-radius: 50%
        background: #464543
        margin: 5px

      .discuss-btn
        background: #464543
        width: 120px
        height: 40px
        border-radius: 4px
        font-size: 12px
        line-height: 40px
        float: right
        margin: 10px 10px 10px 0

        i
          display: none

        @media screen and (max-width: 768px)
          margin: 10px
          float: none

  .no-chimp
    @media screen and (min-width: 871px)
      height: 527px

    @media screen and (max-width: 870px)
      height: 460px

    @media screen and (max-width: 400px)
      height: 100%

  .map-container
    width: 50%
    min-height: 410px
    height: 100%
    position: relative
    z-index: 0

    @media screen and (min-width: 871px)
      height: 527px

    @media screen and (max-width: 768px)
      width: 100%

    @media screen and (max-width: 400px)
      display: none

    .map
      margin: 0

      img
        width: 100%
        box-sizing: border-box
        border-bottom-right-radius: 8px
        border-top-right-radius: 8px

        @media screen and (min-width: 871px)
          height: 527px

  .chimp-summary
    display: flex
    flex-wrap: wrap
    background: $topbar-green
    width: 100%
    border-bottom-left-radius: 8px
    border-bottom-right-radius: 8px
    margin-top: -60px
    position: relative

    @media screen and (max-width: 1170px)
      justify-content: center

    @media screen and (max-width: 400px)
      margin-top: 0

    img
      width: 120px
      height: 100px
      border-bottom-left-radius: 8px

    .chimp-content
      margin: 22px 0 0 0
      flex: 1 0 33%
      max-width: 310px

      button
        text-decoration: underline
        padding: 0

        &.learn-more-btn
          margin: 10px 5px 10px 0

          @media screen and (max-width: 320px)
            margin: 10px 0

      h3, p
        font-size: 16px
        margin: 0

        @media screen and (max-width: 450px)
          font-size: 14px

      p
        line-height: 16px

      @media screen and (max-width: 400px)
        max-width: 270px
        margin: 10px 0 0 0

    .chimp-btn-container
      margin-left: 20px
      flex: 1 0 auto
      line-height: 100px

      button
        background-color: $green
        font-size: 12px
        line-height: 40px
        width: 100%
        max-width: 230px
        height: 40px
        border-radius: 4px
        padding: 0

        &.all-chimps-btn
          margin: 10px 5px 10px 0

        &.new-chimp-btn
          margin: 10px 10px 10px 5px

      @media screen and (max-width: 1170px)
        text-align: center
        width: 100%

      @media screen and (max-width: 515px)
        max-width: 100%
        line-height: initial
        margin: 0
