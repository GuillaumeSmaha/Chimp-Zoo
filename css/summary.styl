.summary-content
  background: $blackish
  width: 100%
  max-width: 930px
  margin: 0 auto
  border-radius: 8px

  .general-summary
    display: inline-flex
    flex-direction: column
    height: 460px
    justify-content: space-between
    padding-left: 20px

    h3
      font-size: 12px
      color: white
      opacity: .5
      -webkit-font-smoothing: antialiased
      -moz-osx-font-smoothing: grayscale
      font-weight: 400

    p
      font-size: 24px

    ul
      padding: 0
      font-size: 24px
      -webkit-font-smoothing: antialiased
      -moz-osx-font-smoothing: grayscale

      li
        margin-bottom: 15px
        list-style: none

    .summary-location
      flex-grow: 0

    .summary-notes
      flex-grow: 1

    .share
      p
        font-size: 12px
        display: inline-block
        opacity: .5
        margin: 18px 15px 18px 0

      .share-btn
        width: 35px
        height: 35px
        border-radius: 50%
        background: #464543
        margin: 5px

      .discuss-btn
        background: #464543
        width: 120px
        height: 40px
        border-radius: 4px
        font-size: 12px
        line-height: 40px
        float: right
        margin-left: 75px

  .no-chimp
    height: 527px

  .map-container
    float: right
    height: 527px

    .map
      margin: 0
      height: 527px

  .chimp-summary
    float: left
    clear: both
    background: $topbar-green
    width: 100%
    border-bottom-left-radius: 8px
    border-bottom-right-radius: 8px
    margin-top: -70px

    img
      float: left
      border-bottom-left-radius: 8px

    .chimp-content
      display: inline-block
      float: left
      margin: 22px 0

      h3
        font-size: 16px
        margin: 0

      p
        margin: 0

    .chimp-btn-container
      display: inline-block
      float: right
      margin: 15px 25px

      button
        background-color: $green
        font-size: 12px
        line-height: 40px
        width: 110px
        height: 40px
        border-radius: 4px
        padding: 0
