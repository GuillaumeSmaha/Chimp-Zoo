.annotation
  padding: 20px 0 0
  margin: 0 auto

  span
    margin: 10px 0 0 0

  .subject
    display: flex
    align-items: center

    @media screen and (max-width: 400px)
      flex-wrap: wrap
      justify-content: space-around

    .guide-btn, .favorite-btn
      cursor: pointer
      display: table
      background-color: $near-black
      padding: 12.5px 13.5px
      border-radius: 50%
      text-align: center
      img
        display: table-cell
        vertical-align: middle

    .guide-btn
      margin-left: 10px

      @media screen and (max-width: 400px)
        order: 2
        margin: 0

    .favorite-btn
      margin-right: 10px

      @media screen and (max-width: 400px)
        order: 3
        margin: 0

    .preview-imgs
      margin: 0 auto 10px
      max-width: 930px
      min-height: 415px

      li
        display: inline


        @media screen and (min-width: 1040px)
          &:nth-child(3):after
            content: "."
            display: block
            height: 0
            clear: both
            visibility: hidden

        img
          padding: 5px
          border-radius: 16px
          width: 100%
          max-width: 300px

          @media screen and (max-width: 768px)
            max-width: 250px

          @media screen and (max-width: 400px)
            max-width: 175px

        // img.zoom-image
        //   transform: scale3d(3,3,2) !important
        //   transition-duration: 500ms
        //   transition-timing-function: ease-in-out
        //   margin-top: 95px

    .video
      margin: 10px auto

      @media screen and (max-width: 400px)
        order: 1
        align-self: center

      img // placeholder img
        width: 100%
        max-width: 930px
        border-radius: 16px



