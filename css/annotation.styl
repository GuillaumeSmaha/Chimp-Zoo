.annotation
  padding: 20px 0 0
  margin: 0 auto

  span
    margin: 10px 0 0 0

  .subject
    display: flex
    align-items: center
    justify-content: space-between

    @media screen and (max-width: 600px)
      justify-content: space-around

    @media screen and (min-width: 601px) and (max-width: 930px)
      width: 98%

    @media screen and (max-width: 600px)
      flex-wrap: wrap

    .guide-btn, .favorite-btn
      cursor: pointer
      display: table
      background-color: $near-black
      padding: 12.5px 13.5px
      border-radius: 50%
      text-align: center

      img
        display: table-cell
        vertical-align: middle

    .guide-btn
      margin: 0 5px 0 10px

      @media screen and (max-width: 600px)
        order: 2
        margin: 0 0 25px

    .favorite-btn
      margin: 0 10px 0 5px

      @media screen and (max-width: 600px)
        order: 3
        margin: 0 0 25px

    .preview-imgs
      margin-bottom: 10px
      max-width: 930px
      height: 100%
      min-height: 415px
      display: block

      figure
        margin: 0
        max-width: 33%
        float: left

        @media screen and (max-width: 600px)
          min-width: 100%

        img
          padding: 5px
          border: .1px solid transparent //IE fix
          border-radius: 16px
          width: 100%
          max-width: 310px
          box-sizing: border-box

          @media screen and (max-width: 600px)
            max-width: 100%

      .zoom-image
        max-width: inherit
        margin-top: 95px
        transition: max-width 0s 0s, margin-top 0s 0s linear

      .fade-out
        visibility: hidden
        opacity: 0
        transition: visibility 0s .25s, opacity .25s linear

    .video
      margin: 10px auto

      @media screen and (max-width: 600px)
        margin-bottom: 25px

      @media screen and (max-width: 400px)
        order: 1
        align-self: center

      video, img // placeholder img
        width: 100%
        max-width: 930px
        border-radius: 16px



