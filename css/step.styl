          &#animal-27:hover:after
            background-position: 0px -2025px

  .age, .sex
    .step-bottom .buttons-container
      margin-top: 30px

      @media screen and (max-width: 450px)
        margin-top: -60px

  .number
    .step-bottom
      padding: 0 0 20px

      .cancel, .done
        display: none

      .buttons-container
        min-height: 100%

  .summary
    .step-bottom
      margin: 0 auto 100px
      padding: 0

      .buttons-container
        max-width: 100%

        #summary-0
          float: right
          max-width: 310px !important
          width: 100%
          height: 70px
          margin: 0 !important

          @media screen and (max-width: 600px)
            max-width: 220px !important
            text-align: left

          @media screen and (max-width: 400px)
            text-align: center
            float: none
            padding: 0

