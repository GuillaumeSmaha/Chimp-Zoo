.step
  text-align: center
  margin: 5px auto 0
  width: 100%
  max-width: 930px

  .step-top
    width: 100%
    background-color: $dark-gray
    border-radius: 8px
    font-size: 16px
    line-height: 24px
    padding: 28px 0
    -webkit-font-smoothing: antialiased
    position: relative
    z-index: 0

    @media screen and (max-width: 930px)
      width: 98%
      margin: 0 auto

    .step-question
      display: block

      @media screen and (max-width: 480px)
        font-size: 14px

    .step-buttons
      position: absolute
      top: 20px
      right: 10px

      small
        font-size: 12px
        line-height: 12px
        color: #5c5c5c

        @media screen and (max-width: 700px)
          align-self: center
          margin-top: 10px

      @media screen and (max-width: 700px)
        display: inline-flex
        position: relative
        top: 10px
        justify-content: center

      .step-button
        background-color: $blackish
        width: 34px
        height: 34px
        border-radius: 100%
        color: #7d7d7d
        font-size: 16px
        font-weight: 400
        line-height: 24px
        margin: 0 10px

      .step-complete
        font-size: 0
        vertical-align: middle
        background: $blackish url(./assets/check-green-icon.svg) no-repeat center center
        background-size: 12px 9px

      .step-active
        background-color: #555656
        color: white

      span:last-child
        img
          display: none

  .step-bottom
    width: 100%
    background-color: $blackish
    padding 20px 0
    border-radius: 8px
    margin-top: -10px

    @media screen and (max-width: 930px)
      width: 98%
      margin: -10px auto

    .buttons-container
      max-width: 720px
      margin: 0 auto
      min-height: 70px

      @media screen and (max-width: 835px)
        max-width: 575px

    button
      min-width: 60px
      height: 30px
      border: solid 2px $green
      border-radius: 35px
      color: $green
      background-color: $blackish
      font-size: 12px
      font-weight: 400
      line-height: 24px
      margin: 5px
      padding: 0 10px

      // 'Nothing here', 'I see something', 'Add', 'Finish', and 'Next Subject' buttons
      &#presence-0, &#presence-1, &#annotation-0, &#annotation-1, &#annotation-2, &#summary-0
        max-width: 220px
        height: 80px
        color: white
        border: none
        display: inline-block
        margin: 0 10px
        font-size: 16px
        line-height: 65px

        &:before
          content: ''
          display: block
          border-radius: 50%
          margin: 10.5px 10px 0 0
          float: left
          width: 39px
          height: 39px

        @media screen and (max-width: 450px)
          width: 220px
          text-align: left
          margin: 5px 10px

        &:active
          background-color: $blackish

        &.nothing-disabled
          font-size: 0
          vertical-align: middle

          &:before
            opacity: 0.3

      // add button
      &#annotation-1
        border-left: solid $gray 1px
        border-right: solid $gray 1px
        border-radius: 0px

      &#annotation-2.finish-disabled
        color: #555656
        opacity: 0.3

      &#presence-0:before, &#annotation-0:before // 'Nothing here' buttons
        background: url(./assets/cancel-icon.svg) no-repeat center center
        border: solid 2px #c72c2c

      @media screen and (max-width: 560px)
        &#annotation-0:before
          display: none

      @media screen and (max-width: 479px)
        &#presence-0:before
          display: none

      &#presence-1:before, &#annotation-2:before, &#summary-0:before // 'I see something' and 'Finish'
        background: url(./assets/arrow-icon.svg) no-repeat center center
        border: solid 2px $green

      // Add annotation button
      &#annotation-1:before
        background: $green url(./assets/add-icon.svg) no-repeat center center
        border: solid 2px $green

    .btn-active
      background-color: $green
      color: white

  .cancel, .next, .done
    position: relative
    top: 100px
    font-size: 16px

    @media screen and (max-width: 700px)
      top: 0
      z-index: 10

    @media screen and (max-width: 450px)
      font-size: 14px
      margin: 25px 5px 5px

  .cancel
    color: #555656
    background-color: transparent
    float: left

    &:before
      content: ''
      background: $blackish url(./assets/cancel-icon.svg) no-repeat center center
      width: 54px
      height: 54px
      border: solid 2px $green
      border-radius: 50%
      position: relative
      display: block
      margin: 0 0 10px 0

      @media screen and (max-width: 450px)
        width: 44px
        height: 38px

  .next
    color: #555656
    background-color: transparent
    float: right

    &:before
      content: ''
      background: $green url(./assets/arrow-icon.svg) no-repeat center center
      width: 54px
      height: 54px
      border: solid 2px $green
      border-radius: 50%
      position: relative
      display: block
      margin: 0 0 10px 0

      @media screen and (max-width: 450px)
        width: 44px
        height: 38px

  .done
    color: #555656
    float: right
    background-color: transparent

    &.disabled:before
      background-color: transparent

  .done:before
    content: ''
    display: block
    background: url(./assets/check-icon.svg) no-repeat center center
    background-color: $green
    margin: 0 0 5px 0
    width: 54px
    height: 54px
    border: solid 2px $green
    border-radius: 50%

    @media screen and (max-width: 450px)
      width: 44px
      height: 38px

  .presence
    .step-bottom
      padding: 5px 0

  .annotation
    .step-bottom
      padding: 0

      .buttons-container
        margin: 0
        max-width: 100%

        button
          max-width: 310px !important
          width: 100%
          margin: 0 !important

          &#annotation-0
            padding: 0 70px

          &#annotation-1
            padding: 0 60px

          &#annotation-2
            padding: 0 100px

  .age, .sex
    .step-bottom .buttons-container
      margin-top: 30px

  .summary
    .step-bottom
      margin: 10px auto 100px

