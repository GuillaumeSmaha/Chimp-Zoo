.step
  text-align: center
  margin: 0 auto
  width: 100%
  max-width: 930px

  .step-top
    width: 100%
    background-color: $dark-gray
    border-radius: 8px
    font-size: 16px
    line-height: 24px
    padding: 28px 0
    -webkit-font-smoothing: antialiased
    position: relative
    z-index: 0

    @media screen and (max-width: 930px)
      width: 98%
      margin: 0 auto

    .step-question
      display: block

      .question
        margin: 0
        line-height: 18px

        @media screen and (max-width: 480px)
          font-size: 14px

      .tip
        font-size: 14px
        margin: 10px 0 0
        line-height: 16px

        .guide-link
          text-decoration: underline
          cursor: pointer

    .step-buttons
      position: absolute
      top: 20px
      right: 10px

      small
        font-size: 12px
        line-height: 12px
        color: #5c5c5c
        margin-right: 5px

        @media screen and (max-width: 700px)
          align-self: center
          margin-top: 10px

      @media screen and (max-width: 700px)
        display: inline-flex
        position: relative
        top: 10px
        justify-content: center

      .step-button
        background-color: $blackish
        width: 34px
        height: 34px
        border-radius: 100%
        color: #7d7d7d
        font-family: 'Nunito', sans-serif
        font-size: 16px
        font-weight: 400
        line-height: 24px
        margin: 0 5px

        @media screen and (max-width: 400px)
          padding: 0

      .step-complete
        font-size: 0
        vertical-align: middle
        background: $green url(./assets/check-icon.svg) no-repeat center center
        background-size: 12px 9px

      .step-active
        background-color: #555656
        color: white

      span:last-child
        img
          display: none

  .step-bottom
    width: 100%
    background-color: $blackish
    padding 20px 0
    border-radius: 8px
    margin-top: -10px

    @media screen and (max-width: 930px)
      width: 98%
      margin: -10px auto

    .buttons-container
      max-width: 720px
      margin: 0 auto
      min-height: 70px

      @media screen and (max-width: 835px)
        max-width: 575px

    button
      min-width: 60px
      height: 30px
      border: solid 2px $green
      border-radius: 35px
      color: $green
      background-color: $blackish
      font-size: 12px
      font-weight: 400
      line-height: 24px
      margin: 5px
      padding: 0 10px

      // 'Nothing here', 'I see something', 'Add', 'Finish', and 'Next Subject' buttons
      &#presence-0, &#presence-1, &#annotation-0, &#annotation-1, &#annotation-2, &#summary-0
        max-width: 220px
        height: 80px
        color: white
        border: none
        display: inline-block
        margin: 0 10px
        font-size: 16px
        line-height: 65px

        &:before
          content: ''
          display: inline-block
          border-radius: 50%
          margin: 0 10px 0 0
          vertical-align: middle
          width: 39px
          height: 39px

        @media screen and (max-width: 450px)
          width: 220px
          text-align: left
          margin: 5px 10px

        &:active
          background-color: $blackish

        &.nothing-disabled
          opacity: 0.3
          vertical-align: middle

          &:before
            opacity: 0.3

      // add button
      &#annotation-1
        border-left: solid $gray 1px
        border-right: solid $gray 1px
        border-radius: 0px

        @media screen and (max-width: 600px)
          border: none

      &#annotation-2.finish-disabled
        color: #555656
        opacity: 0.3

      &#presence-0:before, &#annotation-0:before // 'Nothing here' buttons
        background: url(./assets/cancel-icon.svg) no-repeat center center
        border: solid 2px #c72c2c

      &#presence-1:before, &#annotation-2:before, &#summary-0:before // 'I see something' and 'Finish'
        background: url(./assets/arrow-icon.svg) no-repeat center center
        border: solid 2px $green

      // Add annotation button
      &#annotation-1:before
        background: $green url(./assets/add-icon.svg) no-repeat center center
        border: solid 2px $green

    .btn-active
      background-color: $green
      color: white

  .cancel, .done
    position: relative
    top: 100px
    font-size: 12px
    line-height: 12px
    color: #5c5c5c

    @media screen and (max-width: 700px)
      top: 0
      z-index: 10

    @media screen and (max-width: 450px)
      font-size: 14px
      margin: 25px 5px 5px

  .cancel
    color: #555656
    background-color: transparent
    float: left

    @media screen and (max-width: 700px)
      font-size: 14px

    &:before
      content: ''
      background: $blackish url(./assets/cancel-icon.svg) no-repeat center center
      width: 39px
      height: 39px
      border: solid 2px $green
      border-radius: 50%
      position: relative
      display: block
      margin: 0 0 5px 0

  .done
    color: #555656
    float: right
    background-color: transparent

    &.disabled:before
      background-color: transparent

    @media screen and (max-width: 700px)
      font-size: 14px

  .done:before
    content: ''
    display: block
    background: url(./assets/check-icon.svg) no-repeat center center
    background-color: $green
    margin: 0 0 5px 0
    width: 39px
    height: 39px
    border: solid 2px $green
    border-radius: 50%

  .presence
    .step-bottom
      margin-top: 0
      padding: 5px 0

  .annotation
    .step-bottom
      margin-top: 0
      padding: 0

      .buttons-container
        margin: 0
        max-width: 100%
        display: flex

        @media screen and (max-width: 600px)
          flex-direction: column
          align-items: center

        button
          max-width: 310px !important
          width: 100%
          margin: 0 !important

          @media screen and (max-width: 600px)
            max-width: 220px !important
            text-align: left

  .age, .sex
    .step-bottom .buttons-container
      margin-top: 30px

  .summary
    .step-bottom
      margin: 0 auto 100px
      padding: 0

      .buttons-container
        max-width: 100%

        #summary-0
          float: right
          max-width: 310px !important
          width: 100%
          height: 70px
          margin: 0 !important

          @media screen and (max-width: 600px)
            max-width: 220px !important
            text-align: left

