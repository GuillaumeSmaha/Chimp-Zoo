.profile
  margin: 0 auto !important
  color: #eae9e9

  section
    background: $dark-gray
    height: 100%
    padding: 20px

    &:nth-child(odd)
      background: $blackish

  .profile-status
    display: flex
    align-items: center
    text-align: center
    min-height: 200px

    .greeting
      color: $green
      font-size: 24px
      font-weight: 400

    .classification-count, .favorite-count
      display: inline-block
      padding: 10px 20px

      p
        margin: 5px
        font-size: 24px

  button
    width: 120px
    line-height: 25px
    font-size: 14px
    font-weight: 700
    background: transparent
    border: 2px solid $green

    &:hover, &.active
      background: $green

  .items
    figure
      width: 33%
      margin: 0
      display: inline-block
      position: relative

      video
        width: 100%
        padding: 2.5px
        box-sizing: border-box

      figcaption
        visibility: hidden
        position: absolute
        z-index: 1
        top: 0
        right: 0
        background: rgba(0, 0, 0, .7)
        width: 0px
        height: 98%
        transition: visibility .25s 0s, width .25s 0s linear

        a, button
          visibility: hidden
          transition: visibility 0s .15s linear

        button
          border: none
          width: initial

          &:hover
            background: transparent

        &.show
          visibility: visible
          width: 50px

          a, button
            visibility: visible

  .profile-sign-in
    display: flex
    align-items: center
    height: 200px

    p
      text-align: center

    a, a:visited
      color: white

