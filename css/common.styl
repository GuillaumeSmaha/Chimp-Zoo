html, body
  font-family: 'Nunito', sans-serif
  overflow-x: hidden
  margin: 0
  background-color: $gray

  #wrapper
    width: 100%
    height: 100%
    position: relative
    -webkit-transform: translateX(0)
    transform: translateX(0)
    -webkit-transition: .3s ease all
    transition: .3s ease all

  .push-right
    -webkit-transform: translateX(300px) !important
    transform: translateX(300px) !important

  p
    font-size: 16px
    font-weight: 400
    line-height: 24px
    color: $copy-gray
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

  button
    border-radius: 6px
    background-color: $green
    color: white
    border: none
    margin: 10px

    &:focus
      outline: none

    &.disabled
      background-color: $dark-green
      cursor: not-allowed

  .zooniverse-top-bar
    background: $topbar-green
    color: $mint
    left: 0
    text-align: initial

    .corner
      display: none

  .zooniverse-footer
    background-color: $dark-gray
    color: white
    padding: 20px