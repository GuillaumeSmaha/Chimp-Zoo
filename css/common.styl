html, body
  font-family: 'Nunito', sans-serif
  overflow-x: hidden
  margin: 0
  background-color: $gray
  background-image: url(/assets/bg-fill.png)

  #wrapper
    width: 100%
    height: 100%
    position: relative
    -webkit-transform: translateX(0)
    transform: translateX(0)
    -webkit-transition: .3s ease all
    transition: .3s ease all

  .push-right
    transform: translateX(400px) !important

  #app
    min-height: 100%
    margin-bottom: -274px

    &:after
      content: ""
      display: block

    .content
      width: 100%
      max-width: 1070px
      margin: 95px auto
      box-sizing: border-box

      @media screen and (max-width: 768px)
        max-width: 768px

      @media screen and (max-width: 400px)
        max-width: 400px

  .show
    display: block

  .hide
    display: none !important

  .hidden
    visibility: hidden

  p
    font-size: 16px
    font-weight: 400
    line-height: 24px
    color: $copy-gray
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

  button
    border-radius: 6px
    background-color: $green
    color: white
    border: none
    margin: 10px
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    cursor: pointer

    &:focus
      outline: none

  .disabled
    cursor: not-allowed

  .zooniverse-top-bar
    background: $topbar-green
    color: $mint
    left: 0
    text-align: initial
    height: 30px

    .corner
      display: none

  #footer, #app:after
    height: 274px

    .zooniverse-footer
      background-color: #1f1f1f
      color: white
      padding: 20px